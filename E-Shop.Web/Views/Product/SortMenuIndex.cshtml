@model  E_Shop.Web.ViewModels.Product.IndexPartialView


@using (Html.BeginForm("Index", "Product", new { area = ""}, FormMethod.Post))
{
    <div class="menu">
        <div class="form-inline menus">
            @Html.DropDownListFor(model => model.OrderParam, Model.SortList, new { onchange = "this.form.submit();", @class = "form-control sort-menu" })
            @Html.DropDownListFor(model => model.SizeParam, Model.SizesList, new { onchange = "this.form.submit();", @class = "form-control sort-menu" })
            @Html.DropDownListFor(model => model.CategoryParam, Model.CategoriesList, new { onchange = "this.form.submit();", @class = "form-control sort-menu" })
            @Html.DropDownListFor(model => model.ColorParam, Model.ColorsList, new { onchange = "this.form.submit();", @class = "form-control sort-menu" })
            @Html.DropDownListFor(model => model.MultipleParam, Model.MultipleCategoriesList, new { @class = "form-control sort-menu", multiple="multiple" })
            <div class="form-group form-group1">
                <span id="price-select">Price:</span>
                @Html.EditorFor(model => model.MinPrice, new { htmlAttributes = new { @class = "form-control input-price", @placeholder = "min value" } })
                @Html.EditorFor(model => model.MaxPrice, new { htmlAttributes = new { @class = "form-control input-price", @placeholder = "max value" } })
                <input class="btn btn-default input-price" type="submit" value="OK">
            </div>

        </div>
        <div class="form-inline search" >
            @Html.EditorFor(model=>model.SearchQuery, new { htmlAttributes = new { @class = "form-control", @placeholder = "Search" } })
            <input class="btn btn-default" type="submit" value="Search">
        </div>

    </div>

}
